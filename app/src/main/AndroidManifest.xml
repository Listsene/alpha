<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.l.hilaris.alpha">

    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <meta-data android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id"/>
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
        <activity
            android:name="com.l.hilaris.alpha.views.MainActivity"
            android:label="Sudoku Online">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.l.hilaris.alpha.views.login.LoginActivity"
            android:label="Login">
        </activity>
        <activity
            android:name="com.l.hilaris.alpha.views.front.FrontActivity"
            android:label="Main Menu">
        </activity>
        <activity
            android:name="com.l.hilaris.alpha.views.singleplayer.SinglePlayerMenuActivity"
            android:label="Select Difficulty">
        </activity>
        <activity
            android:name=".views.multiplayer.GameSelectActivity"
            android:label="Select Game Mode">
        </activity>
        <activity
            android:name=".views.multiplayer.DifficultySelectActivity"
            android:label="Select Difficulty">
        </activity>
        <activity
            android:name=".views.difficulties.easy.EasyListActivity"
            android:label="Select Easy Puzzle">
        </activity>
        <activity
            android:name=".views.difficulties.medium.MediumListActivity"
            android:label="Select Medium Puzzle">
        </activity>
        <activity
            android:name=".views.difficulties.hard.HardListActivity"
            android:label="Select Hard Puzzle">
        </activity>
        <activity
            android:name="com.l.hilaris.alpha.views.multiplayer.MultiPlayerMenuActivity"
            android:label="Online Session">
        </activity>
        <activity
            android:name="com.l.hilaris.alpha.views.sudoku.singleplayer.SinglePlayerSudokuActivity"
            android:label="Sudoku">
        </activity>
        <activity
            android:name="com.l.hilaris.alpha.views.sudoku.multiplayer.MultiplayerSudokuActivity"
            android:label="Sudoku Multiplayer">
        </activity>
        <activity
            android:name=".views.sudoku.multiplayer.versus.VersusActivity"
            android:label="Versus">
        </activity>
        <activity
            android:name=".views.sudoku.multiplayer.team.TeamActivity"
            android:label="Team">
        </activity>

    </application>

</manifest>