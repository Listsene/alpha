<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.l.hilaris.alpha">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id"/>
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
        <activity
            android:name="com.l.hilaris.alpha.views.login.MainActivity"
            android:label="Sudoku Online">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.l.hilaris.alpha.views.front.FrontActivity"
            android:label="Main Menu">
        </activity>
        <activity
            android:name="com.l.hilaris.alpha.views.singleplayer.SinglePlayerMenuActivity"
            android:label="Select Difficulty">
        </activity>
        <activity
            android:name="com.l.hilaris.alpha.views.multiplayer.MultiPlayerMenuActivity"
            android:label="Online Session">
        </activity>
        <activity
            android:name="com.l.hilaris.alpha.views.sudoku.singleplayer.SudokuActivity"
            android:label="Sudoku">
        </activity>
        <activity
            android:name="com.l.hilaris.alpha.views.sudoku.easy.EasyListActivity"
            android:label="Select Easy Puzzle">
        </activity>
        <activity
            android:name="com.l.hilaris.alpha.views.sudoku.medium.MediumListActivity"
            android:label="Select Medium Puzzle">
        </activity>
        <activity
            android:name="com.l.hilaris.alpha.views.sudoku.hard.HardListActivity"
            android:label="Select Hard Puzzle">
        </activity>
        <activity
            android:name="com.l.hilaris.alpha.views.multiplayer.ModeSelectActivity"
            android:label="Select Multiplay Mode">
        </activity>
    </application>
</manifest>