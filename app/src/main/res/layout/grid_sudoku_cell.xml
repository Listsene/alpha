<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/cell"
        android:textStyle="bold"
        android:textColor="@color/number_text"
        android:layout_centerHorizontal="true"
        android:background="@drawable/cell_button"/>

    <TextView
        android:id="@+id/memo_cell_1"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignStart="@id/cell"
        android:layout_alignTop="@id/cell"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="@android:color/black"
        android:textSize="7sp"
        android:text="1"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/memo_cell_2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_toEndOf="@+id/memo_cell_1"
        android:layout_alignTop="@id/cell"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="@android:color/black"
        android:textSize="7sp"
        android:text="2"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/memo_cell_3"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_toEndOf="@+id/memo_cell_2"
        android:layout_alignTop="@id/cell"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="@android:color/black"
        android:textSize="7sp"
        android:text="3"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/memo_cell_4"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignStart="@id/cell"
        android:layout_below="@+id/memo_cell_1"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@android:color/black"
        android:textSize="7sp"
        android:text="4"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/memo_cell_5"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_toEndOf="@+id/memo_cell_4"
        android:layout_below="@+id/memo_cell_1"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="@android:color/black"
        android:textSize="7sp"
        android:text="5"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/memo_cell_6"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignEnd="@+id/cell"
        android:layout_below="@+id/memo_cell_1"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@android:color/black"
        android:textSize="7sp"
        android:text="6"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/memo_cell_7"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignStart="@id/cell"
        android:layout_below="@+id/memo_cell_4"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="@android:color/black"
        android:textSize="7sp"
        android:text="7"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/memo_cell_8"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_toEndOf="@+id/memo_cell_7"
        android:layout_below="@+id/memo_cell_4"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="@android:color/black"
        android:textSize="7sp"
        android:text="8"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/memo_cell_9"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignEnd="@+id/cell"
        android:layout_alignBottom="@+id/cell"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="@android:color/black"
        android:textSize="7sp"
        android:text="9"
        android:visibility="invisible"
        />

</RelativeLayout>