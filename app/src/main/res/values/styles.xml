<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_accent</item>
        <item name="android:textColorPrimary">@color/text_color_with_primary</item>
        <item name="android:windowBackground">@color/background_white</item>
    </style>

    <style name = "ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/text_color_with_primary</item>
        <item name="android:textColorSecondary">@color/secondary</item>
        <item name="actionMenuTextColor">@color/text_color_with_primary</item>
        <item name="colorPrimary">@color/primary</item>
    </style>

</resources>
