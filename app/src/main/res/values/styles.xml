<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_accent</item>
        <item name="android:textColorPrimary">@color/text_color_with_primary</item>
        <item name="android:windowBackground">@color/background_white</item>
    </style>

    <style name = "ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/text_color_with_primary</item>
        <item name="android:textColorSecondary">@color/secondary</item>
        <item name="actionMenuTextColor">@color/text_color_with_primary</item>
        <item name="colorPrimary">@color/primary</item>
    </style>
    <style name="GameButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/AccentColor</item>
        <item name="android:textColor">@color/ButtonTextColor</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="InvPopupButton" parent="@style/GameButton">
        <item name="android:background">@color/ButtonTextColor</item>
        <item name="android:textColor">@color/AccentColor</item>
    </style>
    <style name="InvPopupText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/PopupTextColor</item>
        <item name="android:text">@string/inv_popup_text</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="LLScreen" parent="@style/GameScreen">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">30dp</item>
    </style>
    <style name="Blurb">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/BlurbColor</item>
    </style>
    <style name="Instructions" parent="@style/Blurb">
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    <style name="ScoreDisplay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/AccentColor</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="FigureLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="ScoresBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#f0f0f0</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:padding">20dp</item>
    </style>
    <style name="ScoreText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="GameScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="InvPopup" parent="@style/LLScreen">
        <item name="android:background">@color/PopupColor</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>
